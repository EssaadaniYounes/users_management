doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        table 
            thead 
                tr 
                    th name
                    th age
                    th details 
            tbody 
                for user in users
                    tr
                        //- td=user.name 
                        td #{user.name} 
                        td=user.age
                        td 
                            a(href="users/user/"+user.id) show
            